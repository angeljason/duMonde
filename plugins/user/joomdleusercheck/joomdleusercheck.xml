    <authorEmail>development@qontori.com</authorEmail>
    <authorUrl>www.qontori.com</authorUrl>
    <version>1.0.2</version>
	<description>Joomdle User check</description>
	<files>
		<filename plugin="joomdleusercheck">joomdleusercheck.php</filename>
		<filename>helper.php</filename>
	</files>
	  <languages>
	          <language tag="en-GB">language/en-GB.plg_user_joomdleusercheck.ini</language>
	          <language tag="es-ES">language/es-ES.plg_user_joomdleusercheck.ini</language>
	  </languages>
	  <config>
        <fields name="params">

            <fieldset name="basic">

                <field name="extendedusernamechars" type="radio"
                    class="btn-group btn-group-yesno"
                    default="0"
                    description="COM_JOOMDLE_ALLOW_EXTENDED_CHARS_IN_USERNAME_DESCRIPTION"
                    label="COM_JOOMDLE_ALLOW_EXTENDED_CHARS_IN_USERNAME_LABEL"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

            </fieldset>

        </fields>
    </config>

</extension>
