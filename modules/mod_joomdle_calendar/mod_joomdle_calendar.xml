<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>Joomdle Calendar</name>
	<author>Qontori Pte Ltd based on the work from Carlos Mansilla</author>  
	<copyright>Copyright (C) 2014 Qontori Pte Ltd</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
	<authorEmail>development@qontori.com</authorEmail>
	<authorUrl>www.qontori.com</authorUrl>
	<creationDate>Marzo 2010</creationDate>
	<version>1.0</version>
	<description>Shows Moodle calendar block</description>
	<files>
		<filename module="mod_joomdle_calendar">mod_joomdle_calendar.php</filename>
		<filename module="mod_joomdle_calendar">index.html</filename>
		<filename module="mod_joomdle_calendar">helper.php</filename>
		<filename module="mod_joomdle_calendar">cal_functions.js</filename>
		<filename module="mod_joomdle_calendar">cal_events.js</filename>
		<filename module="mod_joomdle_calendar">cal_styles.js</filename>
		<filename module="mod_joomdle_calendar">tmpl/default.php</filename>
		<filename module="mod_joomdle_calendar">tmpl/index.html</filename>
	</files>
	  <languages>
		<language tag="en-GB">language/en-GB.mod_joomdle_calendar.ini</language>
		<language tag="es-ES">language/es-ES.mod_joomdle_calendar.ini</language>
		<language tag="de-DE">language/de-DE.mod_joomdle_calendar.ini</language>
		<language tag="pt-BR">language/pt-BR.mod_joomdle_calendar.ini</language>
		<language tag="fr-FR">language/fr-FR.mod_joomdle_calendar.ini</language>
		<language tag="it-IT">language/it-IT.mod_joomdle_calendar.ini</language>

	  </languages>
	  <config><fields name="params"><fieldset name="basic">
		<field name="start_day" type="list" default="0" label="COM_JOOMDLE_START_WEEK_DAY" description="COM_JOOMDLE_START_WEEK_DAY_DESCRIPTION">
                        <option value="0">Sunday</option>
                        <option value="1">Monday</option>
                </field>
		<field name="guests_see_global" type="list" default="0" label="COM_JOOMDLE_GUESTS_SEE_GLOBAL_EVENTS" description="COM_JOOMDLE_GUESTS_SEE_GLOBAL_EVENTS_DESCRIPTION">
                        <option value="0">No</option>
                        <option value="1">Yes</option>
                </field>
		<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	    </fieldset></fields></config>
</extension>
