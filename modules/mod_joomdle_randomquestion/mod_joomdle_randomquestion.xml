<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" method="upgrade">
	<name>Joomdle random question</name>
	<creationDate>February 2011</creationDate>
	<author>Qontori Pte Ltd</author>  
	<copyright>Copyright (C) 2014 Qontori Pte Ltd</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
	<authorEmail>development@qontori.com</authorEmail>
	<authorUrl>www.qontori.com</authorUrl>
	<version>1.1.0</version>
	<description>Shows a random question from Moodle question bank</description>
	<files>
		<filename module="mod_joomdle_randomquestion">mod_joomdle_randomquestion.php</filename>
		<filename module="mod_joomdle_randomquestion">ajax.php</filename>
		<filename module="mod_joomdle_randomquestion">index.html</filename>
		<filename module="mod_joomdle_randomquestion">helper.php</filename>
		<filename module="mod_joomdle_randomquestion">tmpl/default.php</filename>
		<filename module="mod_joomdle_randomquestion">tmpl/default_results.php</filename>
		<filename module="mod_joomdle_randomquestion">css/style.css</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_joomdle_randomquestion.ini</language>
		<language tag="es-ES">language/es-ES.mod_joomdle_randomquestion.ini</language>
	</languages>
	<config><fields name="params"><fieldset name="basic">
		<field name="category" type="questioncategorylist" default="" label="COM_JOOMDLE_SELECT_QUESTION_CATEGORY"  description="COM_JOOMDLE_SELECT_QUESTION_CATEGORY_DESCRIPTION" addfieldpath="/administrator/components/com_joomdle/fields" />
			<field name="max_questions" type="text" size="3" default="5" label="COM_JOOMDLE_MAX_QUESTIONS" description="COM_JOOMDLE_MAX_QUESTIONS_DESCRIPTION" />

    <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />


    </fieldset></fields></config>

</extension>
